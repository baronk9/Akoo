generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  credits   Int       @default(2) // 2 free trial credits
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model Product {
  id                 String   @id @default(cuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id])
  name               String   @default("Untitled Product")
  rawText            String   @db.Text
  imageBase64        String?  @db.Text
  marketAnalysis     String?  @db.Text
  productPageContent String?  @db.Text
  imagePrompts       String?  @db.Text
  adCopy             String?  @db.Text
  generatedImages    Json?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
